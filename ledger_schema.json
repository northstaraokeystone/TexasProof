{
  "version": "1.0.0",
  "schema_type": "ledger_config",
  "hash_strategy": {
    "algorithm": ["SHA256", "BLAKE3"],
    "format": "sha256:blake3",
    "fallback": "sha256:sha256"
  },
  "ledger_config": {
    "file": "receipts.jsonl",
    "format": "jsonl",
    "append_only": true,
    "flush_on_write": true
  },
  "receipt_base_schema": {
    "required_fields": [
      "receipt_type",
      "ts",
      "tenant_id",
      "payload_hash"
    ],
    "tenant_id": "texasproof",
    "timestamp_format": "ISO8601"
  },
  "merkle_config": {
    "algorithm": "BLAKE3",
    "batch_size": 100,
    "anchor_interval_seconds": 3600
  },
  "compaction_config": {
    "trigger_size_mb": 100,
    "retention_days": 365,
    "preserve_anchors": true
  },
  "validation": {
    "strict_mode": true,
    "require_dual_hash": true,
    "reject_single_hash": true
  }
}
